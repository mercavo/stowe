<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="signup-form">
                <div class="text-center">
                    <img src="/imgs/logo-x2.png">
                </div>
                <%%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-5 border p-4 bg-light shadow" }) do |f| %>
                    <h4 class="mb-5 text-secondary"><%%= t(".title") %></h4>
                    <div class="row">
                        <%%= f.error_notification %>
                        <div class="mb-3 col-md-12">
                            <%%= f.input :email,
                                         required: false,
                                         autofocus: true,
                                         input_html: { autocomplete: "email", class: "form-control" } %>
                        </div>

                        <div class="mb-3 col-md-12">
                            <%%= f.input :password,
                                         required: false,
                                         input_html: { autocomplete: "current-password", class: "form-control" } %>
                        </div>
                        <div class="mb-3 col-md-12">
                            <%%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
                        </div>
                        <div class="col-md-12">
                          <%%= f.button :submit, class: "btn btn-primary float-end" %>
                        </div>
                    </div>
                <%% end %>
                <p class="text-center mt-3 text-secondary">
                  <%%= render "devise/shared/links" %>
                </p>
            </div>
        </div>
    </div>
</div>
